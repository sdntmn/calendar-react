.textareaPopup
  margin-top: 24px
  padding: 6px 12px;

  background: var(--light-100);
  outline: 1px solid var(--neutral-200);
  box-shadow: inset 0px 0px 1px 2px rgba(0, 0, 0, 0.25);
  border-radius: 4px;
  border: none;
  resize: none;
  max-height: 125px;
  min-height: 125px;

  &::placeholder
    font-family: var(--font-family);
    font-style: normal;
    font-weight: 300;
    font-size: 14px;
    line-height: 16px;
    color: var(--neutral-200);
