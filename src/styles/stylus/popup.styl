.popup
  margin: 0;
  padding: 0;
  position: absolute;
  max-width: 290.32px;
  width: 100%;
  background: var(--light-100);
  filter: drop-shadow(0px 0px 7px rgba(0, 0, 0, 0.25));

  z-index: 10;
  transition: visibility 1s, opacity 1s;
  visibility: hidden;
  opacity: 0;

  &__close-btn
    position: relative
    display: flex
    flex-direction: row

  &__container
    padding: 0;
    display: flex;
    flex-direction: column;
    margin: 12px;

  &__close

    margin: 0;
    padding: 0;
    border: none;
    transition: 1s;


    cursor: pointer;


    &:after
      position: absolute
      z-index: 10;
      top: 4px;
      right: 10px;
      content: "";
      width: 20px
      height: 20px
      background: url(../../images/icons_cross-small.svg) no-repeat right;
    background-size: cover


.popup__is-opened
  visibility: visible;
  opacity: 1;
