.popup
  margin: 0;
  padding: 0;
  position: absolute;
  max-width: 290.32px;
  max-height: 315px;
  background: var(--light-100);
  filter: drop-shadow(0px 0px 7px rgba(0, 0, 0, 0.25));

  top: 269px;
  left: calc(((100vw - 1024px + 24px) / 2) + 438px);
  z-index: 10;
  transition: visibility 1s, opacity 1s;
  visibility: visible;
  opacity: 0;

  &__container
    padding: 0;
    display: flex;
    flex-direction: column;
    margin: 0 12px 12px;

  &__close
    background-size: cover;
    background: url(../../images/icons_cross-small.svg) right no-repeat;
    background-color: transparent;
    cursor: pointer;
    margin: 0 auto;
    padding: 0;
    border: none;

    width: 100%;
    height: 8px;
    transition: 1s;
    text-align: center;
    align-content: center;


  &::before
    content: "";
    position: absolute;
    background: url("../../images/decorate.svg") no-repeat;
    fill-opacity: 0.5;
    top: 9px;
    left: -10px;
    width: 24px;
    height: 24px;



.popup_is-opened
  visibility: visible;
  opacity: 1;
  z-index: 1;




