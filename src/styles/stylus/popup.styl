.popup

  font-family: var(--font-family);
  font-style: normal;
  font-weight: 300;
  font-size: 14px;
  line-height: 16px;
  color: var(--neutral-200);
  margin: 0;
  padding: 0;
  position: absolute;
  width: 290.32px;

  background: var(--light-100);
  filter: drop-shadow(0px 0px 7px rgba(0, 0, 0, 0.25));


  transition: visibility 1s, opacity 1s;
  visibility: hidden;
  opacity: 0;

  &__close-btn
    padding: 0
    margin: 0
    position: relative
    display: flex
    flex-direction: row
    height: 8px

  &__container
    padding: 0;
    display: flex;
    flex-direction: column;
    margin: 12px;


  &__close
    margin: 0;
    padding: 0;
    border: none;
    transition: 1s;
    cursor: pointer;

    &:after
      position: absolute
      z-index: 10;
      top: -8px;
      right: 0;
      content: "";
      width: 20px
      height: 20px
      background: url(../../images/icons_cross-small.svg) ;



.popup__is-opened
  visibility: visible;
  opacity: 1;
  //pointer-events: all;




