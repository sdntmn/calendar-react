.popup
  margin: 0;
  padding: 0;
  position: absolute;
  max-width: 290.32px;
  width: 100%;
  background: var(--light-100);
  filter: drop-shadow(0px 0px 7px rgba(0, 0, 0, 0.25));

  top: 269px;
  left: calc(((100vw - 1024px + 8px) / 2) + 438px);
  z-index: 10;
  transition: visibility 1s, opacity 1s;
  visibility: hidden;
  opacity: 0;

  &__container
    width: calc(100% - 12px * 2);
    padding: 0;
    display: flex;
    flex-direction: column;
    margin: 12px;

  &__close
    margin: 0;
    padding: 0;
    border: none;
    transition: 1s;
    text-align: center;
    align-content: center;
    height: 8px
    cursor: pointer;
    background: url(../../images/icons_cross-small.svg) no-repeat right;

  &::before
    content: "";
    position: absolute;
    background: url("../../images/decorate.svg") no-repeat;
    fill-opacity: 0.5;
    top: 9px;
    left: -10px;
    width: 24px;
    height: 24px;

.popup__is-opened
  visibility: visible;
  opacity: 1;
  z-index: 1;




