.controlMonth
  display: flex;
  flex-direction: row;
  padding: 0 12px;

  font-family: var(--font-family);
  font-weight: 400;
  font-style: normal;
  color: var(--dark-200);

  &__button-wrap
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    max-width: 220px;
    width: 100%;

  &__button-icon
    margin: 0;
    padding: 2px 6px;
    max-width: 32px;
    width: 100%;
    max-height: 24px;
    background-color: var(--light-100);
    background-image: cover;
    box-shadow: inset 0px 0px 1px 1px rgba(0, 0, 0, 0.25);
    border-radius: 4px;
    border: none;
    cursor: pointer;

  &__button-icon-arrow
    padding: 0;
    margin: 0;
    mask-image: url(../../images/icons_arrow-large.svg)
    background-color: var(--dark-100)
    width: 20px;
    height: 20px;

    &_rotation
      transform: rotate(-180deg);

  &__text
    font-size: 18px;
    line-height: 21px;


  &__extra-button
    margin: auto 0;
    padding: 0;
    margin-left: 10px;
    background: var(--light-100);
    box-shadow: inset 0px 0px 1px 1px rgba(0, 0, 0, 0.25);
    border-radius: 4px;
    border: none;
    max-width: 59px;
    width: 100%;
    cursor: pointer;
    padding: 2px 6px;

    font-size: 12px;
    line-height: 14px;


    &:disabled
      background: var(--light-100);
      opacity: 0.5
      pointer-events: none;








